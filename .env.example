# Neovim Configuration Environment Variables
# ----------------------------------------
# Copy this file to .env in your Neovim config directory and adjust values
# The .env file should not be committed to version control

# System Information
# These override automatic detection if needed
NVIM_HOSTNAME="your-machine-name"
NVIM_MAIN_LAPTOP="DESKTOP-V2L884C"
NVIM_STATIONARY="DESKTOP-19QVLUP"

# Main Laptop Paths & Settings
NVIM_LAPTOP_PROJECTS_PATH="D:/dev/projects"
NVIM_LAPTOP_TOOLS_PATH="D:/dev/tools"
NVIM_LAPTOP_FONT_SIZE=11

# Desktop Paths & Settings
NVIM_DESKTOP_PROJECTS_PATH="D:/OneDrive/. Universitet/. GitHub"
NVIM_DESKTOP_DATA_PATH="D:/Data"
NVIM_DESKTOP_FONT_SIZE=12
NVIM_DESKTOP_CURSORLINE=true
NVIM_DESKTOP_COLOR_COLUMN="80,120"

# Security Settings
# Uncomment and set to modify default security behavior
# NVIM_SECURITY_ALLOWED_COMMANDS="git,nvim,npm,node,python,lua,make,gcc"
# NVIM_SECURITY_ALLOWED_DIRS="/path/to/additional/allowed/dir"
# NVIM_SECURITY_DISABLE_CONFIRMATIONS=false

# LSP Settings
# Uncomment to override default LSP server paths
# NVIM_LSP_PYTHON_PATH="/path/to/python"
# NVIM_LSP_NODE_PATH="/path/to/node"
